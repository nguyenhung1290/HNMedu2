<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5">

    <TextView
        android:id="@+id/txtxemhinh"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:text="Cơ sở dữ liệu HÙNGNMEDU"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_below="@+id/txtxemhinh"
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:scaleType="fitXY"
        tools:srcCompat="@tools:sample/avatars" />
    <EditText
        android:id="@+id/edtxemhinh"
        android:layout_below="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã số"/>
    <Button
        android:id="@+id/btnxemhinh"
        android:layout_below="@+id/edtxemhinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Xem"/>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7601848265461189/2612222211">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>



